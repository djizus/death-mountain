# Server
PORT=3000
# Comma-separated list of allowed origins (supports http and https)
CORS_ORIGIN=http://localhost:5173,https://localhost:5173

# SQLite
SQLITE_PATH=./data/app.db

# Starknet
STARKNET_RPC_URL=https://api.cartridge.gg/x/starknet/mainnet/rpc/v0_9
STARKNET_TREASURY_ADDRESS=0x066bE88C48b0D71d1Bded275e211C2dDe1EF1c078Fd57ece1313f130Bbc5b859
STARKNET_TREASURY_PRIVATE_KEY=

# Optional AVNU override
AVNU_API_URL=

# Fulfillment
ORDER_QUOTE_TTL_SECONDS=300
ORDER_FEE_BPS=300
WORKER_POLL_INTERVAL_MS=2000
FULFILLMENT_WAIT_TIMEOUT_MS=180000

# Ticket Reserve (auto-restock)
# Target ticket balance to maintain (will auto-buy when below)
TICKET_RESERVE_TARGET=50
# Minimum ticket balance - orders will be rejected if at or below this
TICKET_RESERVE_MINIMUM=5
# Max slippage for restock swaps (0.05 = 5%)
# Note: System automatically selects the token with highest USD value to swap
RESTOCK_SLIPPAGE=0.05
